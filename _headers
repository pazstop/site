# Security and Performance Headers for Cloudflare Pages

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

  # Content Security Policy (adjust as needed)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; media-src 'self'; font-src 'self' data:;

  # Cache Control for static assets
  Cache-Control: public, max-age=3600, must-revalidate

# Cache media files longer
/assets/*
  Cache-Control: public, max-age=86400, immutable

# Don't cache HTML
/*.html
  Cache-Control: public, max-age=0, must-revalidate
